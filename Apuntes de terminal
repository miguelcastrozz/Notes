alias                                  = Crear comando personalizado
cal                                    = Calendario
cat <file>                             = Mostrar contenido del archivo en la terminal
cat -n <file>                          = Mostrar contenido del archivo en la terminal con numeración de líneas
cat -n <file> | less                   = Mostrar contenido del archivo en la terminal con numeración de líneas y posibilidad de navegar por el archivo
code                                   = Abre Visual Studio Code
cd                                     = change directory (cambiar directorio)
cd -                                   = Cambiar al directorio anterior que se visitó
cd ~                                   = Cambiar al directorio de inicio
cd .                                   = Directorio actual
cd ..                                  = ir al directorio anterior
cd ./ /                                = Ir al directorio especificado
cd ./" "/                              = Ir al directorio especificado
cp <file> <destino>                    = Copiar archivo
cp -r <dir> <destino>                  = Copiar directorio
edit <file>                            = Editar archivo
echo <text>                            = Imprimir texto en la terminal
echo <text> > <file>                   = Imprimir texto en el archivo
echo <text> >> <file>                  = Imprimir texto en el archivo sin sobreescribir el contenido
find <origen> -name <"nombre">         = Buscar archivo por nombre
find <origen> -iname <"nombre">        = Buscar archivo por nombre sin tener en cuenta mayúsculas y minúsculas
find <origen> -type <tipo>             = Buscar archivo por tipo
find <origen> -type d -name <"nombre"> = Buscar archivo por tipo
ls                                     = list (listar)
ls -a                                  = Listar archivos ocultos
ls -l                                  = listar con detalles (d = carpeta, l = enlace, - = archivo)
ls -l -h                               = listar con detalles y tamaño en human readable
ls -lh                                 = listar con detalles y tamaño en human readable
ls -a                                  = listar todos los archivos incluyendo los ocultos
ls -al                                 = listar archivos ocultos
clear                                  = limpiar la terminal
history                                = Ver el historial de comandos
man <comando>                          = Ver la ayuda del comando
mkdir                                  = make directory (crear carpeta)
mkdir -p                               = crear carpeta y sub carpetas y si no existen las crea
move <file> <destino>                  = Mover archivo
nano <file>                            = Abrir archivo con nano
mv archivo1.txt archivo.txt            = renombrar archivo
ping <ip>                              = ping (comprobar conexión)
pwd                                    = Donde estoy ubicado
rm                                     = Eliminar
rm -i                                  = Eliminar preguntando
rm -i *                                = Eliminar todos los archivos preguntando
rm -d                                  = Eliminar directorio vacío
rm -r <dir>                            = Eliminar directorio y su contenido
sudo                                   = super user do (ejecutar como administrador)
sudo apt install <package>             = Instalar paquete
sudo purge                             = Eliminar paquetes
touch <file>                           = Crear archivo (Parámetro: nombre del archivo)
top                                    = Ver procesos
vim <file>                             = Editar archivo con vim
--color=auto                           = Mostrar colores en la terminal
--help                                 = Muestra all lo que podemos hacer con un comando ❌
